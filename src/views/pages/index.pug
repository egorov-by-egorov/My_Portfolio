extends ../auth.layout.pug
block content
  .preloader#preloader
    .preloader__spinner
      .preloader__animation
      .preloader__percent#preloader__percent 0%
  .auth__parralax
    .auth__parralax-layer(data-speed='0.0')
      +image('parralaxLayers/Layer_0.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.0')
      +image('parralaxLayers/Layer_1.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.05')
      +image('parralaxLayers/Layer_2.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.15')
      +image('parralaxLayers/Layer_3.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.05')
      +image('parralaxLayers/Layer_4.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.10')
      +image('parralaxLayers/Layer_5.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.100')
      +image('parralaxLayers/Layer_6.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.10')
      +image('parralaxLayers/Layer_7.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.250')
      +image('parralaxLayers/Layer_8.png', 'ParralaxLayers', 'auth__parralax-img')
    .auth__parralax-layer(data-speed='0.50')
      +image('parralaxLayers/Layer_6.png', 'ParralaxLayers', 'auth__parralax-img')
  section.auth__section#auth-component
    button.auth__btn(type='button') Авторизоваться
    .flipper.auth__flipper
      .flipper__user-card
        .flipper__avatar
          +image('avatar.png', 'Avatar', 'flipper__avatar-img')
        .flipper__desc
          .flipper__name Егоров Дмитрий
          .flipper__info Личный сайт разработчика
        -
          var socials = [
            ['vk', 'http://vk.com/egorovfam'],
            ['github', 'http://github.com/egorov-by-egorov'],
            ['in', 'http://in.com']
          ]
        ul.socials__list
          each item in socials
            li.flipper__socials-item
              a(href=`${item[1]}` target="blank").socials__link
                +icon(item[0], 'flipper__socials-icon')
        nav.flipper__buttons
          ul.flipper__list
            li.flipper__item
              a(href="works.html").flipper__link Мои работы
            li.flipper__item
              a(href="about.html").flipper__link Обо мне
            li.flipper__item
              a(href="blog.html").flipper__link Блог
      .flipper__authorization
        .flipper__title Авторизуйтесь
        form(action="#").flipper__form#auth-component
          label(for="login").visuallyhidden Введите Логин
          .flipper__inputs
            .flipper__icon-cont
              +icon('login', 'flipper__icon-login')
            input.flipper__input#login(
              type="text",
              placeholder="Логин",
              v-model="user.name",
              @invalid='addErrorClass',
              @focus='deleteErrorClass'
              )
            .error-message(ref="error") Неверно введено Имя!
          label(for="password").visuallyhidden Введите Пароль
          .flipper__inputs
            .flipper__icon-cont
              +icon('password', 'flipper__icon-login')
            input.flipper__input#password(
              type="password",
              placeholder='Пароль',
              v-model="user.password",
              @invalid='addErrorClass',
              @focus='deleteErrorClass'
              )
            .error-message(ref="error") Неверно введен Пароль!
          label(for="human")
            input.flipper__checkbox#human(
              type="checkbox",
              v-model="user.human"
              )
            .flipper__checkbox-fake
            span.flipper__checkbox-text Я человек
          .flipper__radio
            .flipper__radio-question Вы точно не робот?
            .flipper__radio-btns
              label
                input.flipper__radio-input(
                  type="radio",
                  name="robo"
                  )
                .flipper__radio-fake
                span Да
              label
                input.flipper__radio-input(
                  type="radio",
                  name="robo"
                  )
                .flipper__radio-fake
                span Не уверен
        .flipper__buttons
          button.flipper__button.flipper__link--back-btn(
            type="button"
            ) На главную
          button.flipper__button(
            @click="login"
            ) Войти

    footer.copyright-welcome
      small © Егоров Дмитрий | создано с любовью в LoftSchool | 2018